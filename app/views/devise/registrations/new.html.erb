<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%=  %>
  <div class="input-field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: (resource.errors[:email].blank? ? "validate" : "validate invalid") %>
  </div>

  <div class="input-field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: (resource.errors[:password].blank? ? "validate" : "validate invalid") %>
    <% if @minimum_password_length %>
      <span class="helper-text">(<%= @minimum_password_length %> characters minimum)</span>
    <% end %>
  </div>

  <div class="input-field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: (resource.errors[:password_confirmation].blank? ? "validate" : "validate invalid") %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "waves-effect waves-light btn" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

